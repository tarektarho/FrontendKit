{
  "name": "@tarektarho/frontend-kit",
  "version": "1.0.3",
  "description": "Typed utilities for frontend JavaScript apps",
  "main": "./dist/frontend-kit.umd.js",
  "module": "./dist/frontend-kit.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/frontend-kit.es.js",
      "require": "./dist/frontend-kit.umd.js",
      "default": "./dist/frontend-kit.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc --project tsconfig.json && vite build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "publish": "pnpm publish --access public"
  },
  "author": "Tarek Tarho",
  "license": "MIT",
  "keywords": [
    "typescript",
    "utilities",
    "frontend",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tarektarho/FrontendKit"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^22.15.17",
    "@vitest/browser": "^3.1.3",
    "@vitest/coverage-v8": "3.1.3",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "eslint": "^9.26.0",
    "prettier": "^3.5.3"
  }
}