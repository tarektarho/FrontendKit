{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}